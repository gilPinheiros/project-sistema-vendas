<VBox alignment="CENTER" fillWidth="false" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.sistemavendas.controller.LoginController">
   <children>
      <AnchorPane prefHeight="350.0" prefWidth="450.0" styleClass="user" stylesheets="@../application/application.css">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="76.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../imagens/N50/user.png" />
               </image>
            </ImageView>
            <TextField fx:id="txtLogin" layoutX="226.0" layoutY="131.0" prefHeight="35.0" prefWidth="200.0" promptText="Login..." />
            <PasswordField fx:id="txtSenha" layoutX="226.0" layoutY="204.0" prefHeight="35.0" prefWidth="200.0" promptText="Senha..." />
            <Label layoutX="226.0" layoutY="114.0" text="Digite seu Login" textFill="WHITE" />
            <Label layoutX="226.0" layoutY="187.0" text="Digite sua senha" textFill="WHITE" />
            <HBox alignment="CENTER_LEFT" layoutX="226.0" layoutY="250.0" spacing="5.0">
               <children>
                  <RadioButton mnemonicParsing="false" text="Servidor" />
                  <RadioButton layoutX="145.0" layoutY="40.0" mnemonicParsing="false" text="Gerencia" />
                  <RadioButton layoutX="188.0" layoutY="40.0" mnemonicParsing="false" text="Dono" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Button fx:id="btnEntrar" layoutX="90.0" layoutY="251.0" mnemonicParsing="false" onAction="#logar" prefHeight="25.0" prefWidth="124.0" text="Enter" />
            <Label alignment="CENTER" layoutX="90.0" layoutY="65.0" lineSpacing="2.0" prefHeight="17.0" prefWidth="335.0" text="Login sistema de vendas" textFill="WHITE">
               <font>
                  <Font name="Microsoft YaHei" size="24.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
